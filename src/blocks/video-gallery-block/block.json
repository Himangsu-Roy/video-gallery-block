{
  "apiVersion": 2,
  "name": "vgb/video-gallery",
  "title": "Video Gallery",
  "description": "Display your videos as gallery in a professional way.",
  "category": "videoblocks",
  "keywords": ["video", "gallery", "filter"],
  "textdomain": "video-gallery",
  "attributes": {
    "align": {
      "type": "string",
      "default": ""
    },
    "albums": {
      "type": "array",
      "default": []
    },
    "videos": {
      "type": "array",
      "default": [
        {
          "video": "",
          "poster": "",
          "caption": "",
          "albs": []
        }
      ]
    },
    "columns": {
      "type": "object",
      "default": {
        "desktop": 3,
        "tablet": 2,
        "mobile": 1
      }
    },
    "columnGap": {
      "type": "number",
      "default": 10
    },
    "rowGap": {
      "type": "number",
      "default": 10
    },
    "isPopupWidthAsRatio": {
      "type": "boolean",
      "default": false
    },
    "filter": {
      "type": "object",
      "default": {
        "show": true,
        "commonLabel": "All Videos"
      }
    },
    "background": {
      "type": "object",
      "default": {
        "color": "#fff"
      }
    },
    "padding": {
      "type": "object",
      "default": {
        "vertical": "10px",
        "horizontal": "10px"
      }
    },
    "border": {
      "type": "object",
      "default": {
        "radius": "5px"
      }
    },
    "shadow": {
      "type": "array",
      "default": [
        {
          "hOffset": "0px",
          "vOffset": "25px",
          "blur": "30px",
          "spreed": "-20px",
          "color": "#0003"
        }
      ]
    },
    "filterBtnTypo": {
      "type": "object",
      "default": {
        "fontSize": {
          "desktop": 14,
          "tablet": 14,
          "mobile": 14
        }
      }
    },
    "filterBtnColors": {
      "type": "object",
      "default": {
        "color": "#fff",
        "bg": "#146ef5"
      }
    },
    "filterBtnHoverColors": {
      "type": "object",
      "default": {
        "color": "#fff",
        "bg": "#ff7a00"
      }
    },
    "itemHeight": {
      "type": "string",
      "default": "200px"
    },
    "styles": {
      "type": "object",
      "default": {
        "caption": {
          "colors": {
            "color": "#fff",
            "bg": "rgba(0, 0, 0, 0.55)"
          },
          "typography": {
            "fontSize": {
              "desktop": 14,
              "tablet": 14,
              "mobile": 14
            }
          },
          "padding": {
            "vertical": "10px",
            "horizontal": "10px"
          }
        },
        "lightBoxCaption": {
          "colors": {
            "color": "#fff",
            "bg": "#00000000"
          },
          "typography": {
            "fontSize": {
              "desktop": 14,
              "tablet": 14,
              "mobile": 14
            }
          },
          "padding": {
            "vertical": "10px",
            "horizontal": "10px"
          }
        }
      }
    },
    "options": {
      "type": "object",
      "default": {
        "objectFit": "cover",
        "showCaptionOnThumbnail": true
      }
    }
  },
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "example": {
    "attributes": {
      "preview": true,
      "link": "https://www.youtube.com/watch?v=Pa5WSaRVRho"
    }
  },
  "editorScript": ["file:./index.js", "jquery", "lodash", "isotope"],
  "editorStyle": "file:./index.css",
  "style": ["file:./view.css", "plyr"],
  "render": "file:./render.php",
  "viewScript": ["file:./view.js", "jquery", "lodash", "isotope", "plyr"]
}
